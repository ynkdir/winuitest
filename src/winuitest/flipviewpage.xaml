<?xml version="1.0" encoding="utf-8"?>
<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock>VlipView</TextBlock>
        <FlipView x:Name="FlipView1" Width="100" Height="100" SelectionChanged="FlipView1_SelectionChanged">
            <FlipView.Items>
                <Rectangle Tag="Red" Fill="Red" />
                <Rectangle Tag="Green" Fill="Green" />
                <Rectangle Tag="Blue" Fill="Blue" />
                <Rectangle Tag="Yellow" Fill="Yellow" />
            </FlipView.Items>
        </FlipView>
        <TextBlock x:Name="Output" />
    </StackPanel>

</Page>
