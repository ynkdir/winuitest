    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock>CheckBox</TextBlock>
        <CheckBox x:Name="CheckBox1" Content="CheckBox" Click="CheckBox1_Click" />

        <TextBlock>CheckBox (ThreeState)</TextBlock>
        <CheckBox x:Name="CheckBox2" Content="CheckBox (TheeState)" IsThreeState="true" Click="CheckBox2_Click" />
    </StackPanel>

</Page>
