<?xml version="1.0" encoding="utf-8"?>
<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock>SplitView</TextBlock>
        <SplitView IsPaneOpen="True" DisplayMode="Inline" OpenPaneLength="296" Height="300">
            <SplitView.Pane>
                <TextBlock Text="Pane" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </SplitView.Pane>
            <Grid >
                <TextBlock Text="Content" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Grid>
        </SplitView>
    </StackPanel>

</Page>
