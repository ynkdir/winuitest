    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock>DropDownButton</TextBlock>
        <DropDownButton x:Name="DropDownButton1" Content="DropDownButton">
