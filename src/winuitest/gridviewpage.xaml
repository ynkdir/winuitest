<?xml version="1.0" encoding="utf-8"?>
<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock>GridView</TextBlock>
        <GridView x:Name="GridView1" IsItemClickEnabled="True" ItemClick="GridView1_ItemClick">
            <GridView.Items>
                <GridViewItem>
                    <Rectangle Tag="Red" Width="50" Height="50" Fill="Red" />
                </GridViewItem>
                <GridViewItem>
                    <Rectangle Tag="Green" Width="50" Height="50" Fill="Green" />
                </GridViewItem>
                <GridViewItem>
                    <Rectangle Tag="Blue" Width="50" Height="50" Fill="Blue" />
                </GridViewItem>
                <GridViewItem>
                    <Rectangle Tag="Yellow" Width="50" Height="50" Fill="Yellow" />
                </GridViewItem>
            </GridView.Items>
        </GridView>
        <TextBlock x:Name="Output" />
    </StackPanel>

</Page>
